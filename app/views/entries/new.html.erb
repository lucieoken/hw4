<h1>New Entry</h1>
<%= form_with model: @entry, local: true, html: { multipart: true }, class: "form-horizontal" do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :occurred_on, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.date_select :occurred_on, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :image, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Log Entry', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

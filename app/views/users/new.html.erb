<h1>New User Account</h1>
<%= form_with model: @user, url: signup_path, local: true, class: "form-horizontal" do |form| %>
  <div class="form-group">
    <%= form.label :username, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :username, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Signup', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
